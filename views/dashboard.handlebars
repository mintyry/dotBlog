<div class="project row mb-4">
  <p>
    <em>This is your [dash]Board, where you will see all of your own posts!</em>
  </p>
</div>

{{#each posts as |post|}}

<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- This will lead to an individual post -->
      <a href="/singlePost/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7 my-2">
    <p>
      {{post.content}}
    </p>
  </div>
</div>

{{/each}}

<p>
  <button id = "new-post" class="btn btn-primary">[dot]Post</button>
</p>
<br />
{{!-- form for new post is hidden until button is clicked --}}
<form id="myForm" style="display: none;">
  <div class="row mt-4">
  <div class="col-md-6">
    <h3>[dot]Blog your new post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Post title:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">Post body:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">[dot]Blog it!</button>
      </div>
    </form>
  </div>
</form>

<script src = "js/dashboardPost.js"></script>